<div class="container justify-content-center align-items-center">
  <div class="row">

    <!-- ユーザープロフィール画面 -->
    <div class="col-md-5 mb-4">
      <div class="card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <%= image_tag @user.get_profile_image(70, 70), class: "profile_image mr-2" %>
            <h5 class="card-title mb-0"><%= @user.user_name %></h5>
          </div>
          <p class="card-text text-muted mt-4"><%= @user.profile %></p>
          <% if @user == current_user %>
            <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-success" %>
          <% end %>

        </div>
      </div>
    </div>

    <!-- 地図表示画面 -->
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <div id="user-posts-map" style="height: 500px;"></div>
        </div>
      </div>
    </div>

    <!-- 下部投稿一覧 -->
    <div class="col-md-12 mt-2">
      <div class="card">        
        <div class="card-body">
          <h4>投稿一覧</h4>
          <table class="table table-m custom-post-table">
            <thead>
              <tr>
                <th></th>
                <th>タイトル</th>
                <th>投稿日</th>
                <th>更新日</th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |post| %>
                <tr class="post-row" data-href="<%= post_path(post) %>">
                  <td><%= post.id %></td>
                  <td><%= post.title %></td>
                  <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                  <td>
                    <% if post.created_at != post.updated_at %>
                      <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- google_map_api関係 -->

<%= javascript_pack_tag "map_user_show", 'data-turbolinks-track': 'reload' %>
