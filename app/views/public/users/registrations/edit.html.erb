<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2 class="mb-4 text-center">ユーザー情報編集</h2>

      <%= form_for(resource,
            as: resource_name,
            url: registration_path(resource_name),
            html: { method: :put }) do |f| %>

        <div class="mb-3">
          <%= f.label :user_name, "ユーザー名", class: "form-label" %>
          <%= f.text_field :user_name,
                autocomplete: "username",
                class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email,
                autocomplete: "email",
                class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :profile, "プロフィール", class: "form-label" %>
          <%= f.text_area :profile,
                rows: 4,
                class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
          <%= f.file_field :profile_image,
                accept: "image/*",
                class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "新しいパスワード", class: "form-label" %>
          <%= f.password_field :password,
                autocomplete: "new-password",
                class: "form-control" %>
          <div class="form-text">
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-warning">
            確認待ちメールアドレス：<%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <%= f.submit "更新する", class: "btn btn-success w-100 mb-3" %>
      <% end %>

      <%= link_to "退会する", unsubscribe_users_path, class: "btn btn-danger w-100 mb-3" %>
      <div class="text-center">
        <%= link_to "戻る", :back %>
      </div>

    </div>
  </div>
</div>
