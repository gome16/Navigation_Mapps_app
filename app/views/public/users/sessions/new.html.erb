<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2 class="mb-4 text-center">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password,
                autocomplete: "current-password",
                class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
          </div>
        <% end %>

        <%= f.submit "ログイン", class: "btn btn-success w-100 mb-3" %>

      <% end %>

      <div class="text-center">
        <%= render "public/users/shared/links" %>
      </div>

    </div>
  </div>
</div>
