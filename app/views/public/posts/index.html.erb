<div class="container justify-content-center align-items-center">
  <div class="row">
    <!-- 地図表示画面 -->
    <div class="col-md-12 mt-5 ">
      <h4>投稿一覧</h4>
      <div class="card">
        <div class="card-body">
          <div id="map"></div>
        </div>
      </div>
    </div>

    <!-- 下部投稿一覧 -->
    <div class="col-md-12 mt-2">
      <div class="card">        
        <div class="card-body">
          <h4>投稿一覧</h4>
          <table class="table table-m custom-post-table">
            <thead>
              <tr>
                <th></th>
                <th>タイトル</th>
                <th>投稿日</th>
                <th>更新日</th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |post| %>
                <tr class="post-row border-bottom" data-href="<%= post_path(post) %>">
                  <td><%= post.id %></td>
                  <td><%= post.title %></td>
                  <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                  <td>
                    <% if post.created_at != post.updated_at %>
                      <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>
