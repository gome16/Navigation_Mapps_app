<div class="container justify-content-center align-items-center">
  <div class="row">
    <!-- 地図表示画面 -->
    <div class="col-md-12 mt-5 ">
      <h4><%= @post.title %></h4>
      <div class="card">
        <div class="card-body">
          <div id="map" 
            data-lat="<%= @post.latitude %>" 
            data-lng="<%= @post.longitude %>"
            style="height: 400px;">
          </div>
        </div>
      </div>
    </div>

    <!-- 下部投稿詳細画面 -->
    <div class="col-md-12 mt-2">
      <div class="card">        
        <div class="card-body">
          <h4>投稿詳細</h4>
          <hr>
          <h5><%= @post.comment %><h5>
          <hr>
          <% if @post.user_id == current_user.id %>
            <%= link_to "編集", edit_post_path(@post), class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'map_show'%>
